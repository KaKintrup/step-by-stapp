<%@posts = BlogPost.all.sample(3) %>

<%= link_to blog_posts_path do %>
  <div class="underlined-headline" style="color:white">
    <h2>Latest Posts</h2>
    <div class="headline"></div>
  </div>
<% end %>

<% @posts.each do  |post|%>

  <%= link_to blog_post_path(post) do %>
    <div class="card-blog-post">
      <%= cl_image_tag post.photo.key%>
      <div class="card-blog-infos">
        <h2><%= post.title %> </h2>
        <p> <em> <%= post.descripton %> </em> </p>
      </div>
    </div>
  <% end %>
<hr>
<% end %>
