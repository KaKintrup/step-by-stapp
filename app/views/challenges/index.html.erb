<div class="underlined-headline">
  <h1> Community challenges</h1>
  <div class="headline"></div>
</div>

<!-- Challenge card design -->

<div class="cards-challenges my-5">
  <% @challenges.each do  |challenge|%>
    <% if challenge.public %>
      <%= link_to challenge_path(challenge) do %>
        <div class="card-challenge" >
          <div class="card-challenge-infos">
            <%= image_tag "public-challenge-icon.png", height: 20, width: 20 %>
          </div>
          <div class="card-challenge-progress">
            <div class="card-challenge-icon-title">
              <div class="card-challenge-icon">
                <%= image_tag "mindfulness-category.png", height: 26, width: 26 %>
              </div>
              <div class="card-challenge-title">
                <%= challenge.title %>
              </div>
            </div>
            <div class="card-challenge-progress-boxes">
              <div class="checkbox mon">
              </div>
              <div class="checkbox tue">
              </div>
              <div class="checkbox wed">
              </div>
              <div class="checkbox thu">
              </div>
              <div class="checkbox fri">
              </div>
              <div class="checkbox sat">
              </div>
              <div class="checkbox sun">
              </div>
            </div>
            <div href="#" class="check-button">
              <%= image_tag "check.png", height: 32, width: 32 %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

<div>
  <%= link_to "Add a new challenge", new_challenge_path, class: "btn-blue d-flex" %>
</div>
<div>
    <%= link_to "See all my challenges", challenge_participations_path, class: "btn-black d-flex" %>
</div>