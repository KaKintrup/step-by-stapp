<div class="underlined-headline">
  <h1>New challenge</h1>
  <div class="headline"></div>
</div>


<div>
  <%= simple_form_for(@challenge) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category, collection: ["sports", "mindfulness", "self-organisation", "studying", "nutrition", "others"] %>
    <%= f.input :weekly_goal, collection: (1..7).to_a %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :public %>
    <%= f.button :submit, "Submit", class: "btn-blue" %>
  <% end %>
</div>

